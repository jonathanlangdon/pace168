# Disable directory browsing
Options -Indexes

# Disable server signature (hides server information)
ServerSignature Off

# Redirect from non-www to www (pace168.com to www.pace168.com)
RewriteEngine On
RewriteCond %{HTTP_HOST} ^pace168\.com [NC]
RewriteRule ^(.*)$ https://www.pace168.com/$1 [L,R=301]

# Redirect to HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Deny access to sensitive files and directories (e.g., PHP webhooks, config files)
<FilesMatch "\.(env|ini|log|sh|txt|json|md|yml|yaml|php)$">
    Require all denied
</FilesMatch>

# Protect .htaccess itself
<Files ".htaccess">
    Require all denied
</Files>

# Set cache control headers for static assets (improves performance)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# Block access to the includes directory (if applicable for the webhook)
<Directory "/path/to/includes">
    Order Allow,Deny
    Deny from all
</Directory>

# Block script execution in uploads folder (if needed)
<Directory "/path/to/uploads">
    SetHandler None
    Options -ExecCGI
    AddType text/plain .php .pl .cgi .py .asp .jsp .sh
</Directory>
